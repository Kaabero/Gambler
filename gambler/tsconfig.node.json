{
  "compilerOptions": {
    
    "target": "ES2022",
    "lib": ["ES2023", "dom"],
    "module": "ESNext",
    "jsx": "react",
    "composite": true,
    "skipLibCheck": true,
    "outDir": "dist",

    /* Bundler mode */
    "moduleResolution": "bundler",
    
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": false,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

   
  },
  "include": ["vite.config.ts", "src/**/*.ts", "src/**/*.tsx"]
}
